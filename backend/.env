# MongoDB connection string
MONGO_URI=your_mongodb_connection_string_here

# Ethereum private key of the faucet wallet (keep secret!)
PRIVATE_KEY=your_ethereum_private_key_here

# Infura Sepolia endpoint
INFURA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Faucet smart contract address
FAUCET_CONTRACT_ADDRESS=your_faucet_contract_address_here

# LCC token contract address
LCC_TOKEN_ADDRESS=your_LCC_token_contract_address_here

# Google reCAPTCHA secret key
RECAPTCHA_SECRET=your_recaptcha_secret_here

# Faucet amount per claim (in token units)
FAUCET_AMOUNT=100

# HMAC signing secret for request verification (server-only)
LCC_FAUCET_SIGNING_SECRET=your_signing_secret_here
